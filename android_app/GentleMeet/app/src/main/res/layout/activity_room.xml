<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="co.falconlabs.gentlemeet.app.RoomActivity">

    <co.falconlabs.gentlemeet.app.TimerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_event"
        android:id="@+id/eventTimer"
        android:textColor="#ffff8c65"
        android:textSize="40dp"
        android:textAlignment="center"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventTitle"
        android:layout_below="@+id/eventTimer"
        android:layout_alignParentStart="true"
        android:textColor="#ff999999"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apartar Sala"
        android:id="@+id/eventButton"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/eventTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#ffff8c65"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textColor="#ffffffff"
        android:onClick="buttonAction"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rangeTitle"
        android:layout_below="@+id/eventTitle"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventsList"
        android:layout_below="@+id/eventButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />


</RelativeLayout>
